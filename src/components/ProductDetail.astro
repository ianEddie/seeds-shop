---
import type { Product } from 'types'
import AddToCart from './AddToCart'
import { WeedIcon, ClockIcon, WeighIcon, MixIcon } from '@icons/index.astro'

const { product, slug } = Astro.props
---

<article
  class='bg-white w-[65%] min-h-[70%] flex shadow-2xl shadow-neutral-400 rounded-3xl'
  transition:name=`product ${slug} box`
>
  <!--? Container one -->
  <picture class='w-1/3'>
    <img
      src={product?.image}
      alt=`Image of ${product?.title}`
      class='object-cover rounded-l-3xl rounded-r-lg h-full w-full'
      transition:name=`product ${slug} image`
    />
  </picture>
  <!--? Container two -->
  <div class='flex flex-col items-center justify-around p-5 relative w-2/3'>
    <AddToCart client:load product={product} />
    <!-- Title -->
    <h2
      class='text-xl font-bold text-neutral-900'
      transition:name=`product ${slug} title`
    >
      {product?.title}
    </h2>
    <!-- Description -->
    <p class='max-w-[90%] font-semibold text-[15px]'>{product?.description}</p>
    <!-- Info -->
    <div class='w-full grid grid-cols-2 gap-7 px-5'>
      <!-- part 1 -->
      <picture class='picture'>
        <WeedIcon class='icon text-green-700' />
        <span>{product?.genotype}</span>
      </picture>
      <!-- part 2 -->
      <picture class='picture'>
        <MixIcon class='text-blue-700 icon' />
        <span>{product?.mix}</span>
      </picture>
      <!-- part 3 -->
      <picture class='picture'>
        <ClockIcon class='text-red-700 icon' />
        <span>{product?.time} dias</span>
      </picture>
      <!-- part 4 -->
      <picture class='picture'>
        <WeighIcon class='text-zinc-700 icon' />
        <span>{product?.weight} g/m2</span>
      </picture>
    </div>
  </div>
</article>
<style>
  .picture {
    @apply flex flex-col items-center text-center gap-2 text-sm font-medium;
  }
  .icon {
    @apply size-7;
  }
</style>
