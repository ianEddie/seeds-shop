---
import { products } from '@lib/data'
import Layout from '@layouts/Layout.astro'
import ProductItem from '@components/ProductItem.astro'

const { category } = Astro.params
const filteredProducts = products.filter(
  (product) => product.category === category
)
---

<Layout title=`${category}`>
  <section
    class='min-h-screen flex flex-col items-center justify-center gap-y-10 px-10 sm:pt-0 pt-[90px]'
  >
    <h1 class='font-titles text-[2.2em] uppercase text-neutral-800'>
      {category}
    </h1>
    <div class='flex flex-wrap gap-5 justify-center'>
      {filteredProducts.map((product) => <ProductItem product={product} />)}
    </div>
  </section>
</Layout>
<style>
  section {
    animation: load;
    animation-duration: 1s;
  }
  @keyframes load {
    from {
      scale: 0;
      translate: 0 100px;
    }
    to {
      scale: 1;
      translate: 0 0;
    }
  }
</style>
